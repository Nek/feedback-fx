{
  "include": ["./html/**/*"],
  "exclude": ["./html/**/*.d.*", "./eslint.config.js", "node_modules"],
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "allowJs": true,
    "checkJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": false,

    /* Bundler mode */
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  }
}
